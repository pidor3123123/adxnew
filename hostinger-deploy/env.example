# База данных MySQL
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# Supabase (для синхронизации с админ панелью)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Webhook (для приёма изменений из админ панели)
WEBHOOK_URL=https://your-domain.com/api/webhook.php
WEBHOOK_SECRET=generate_a_secure_random_secret

# CORS (разрешённые origins, через запятую)
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# Admin API Key (для api/admin_deposits.php - одобрение депозитов)
ADMIN_API_KEY=generate_secure_api_key_for_admin
